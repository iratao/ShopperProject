<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ira.shopper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    
    <!-- Google Maps v2 API -->
    <permission
        android:name="com.uwetrottmann.shopr.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.uwetrottmann.shopr.permission.MAPS_RECEIVE" />
    
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    
    <application
        android:name="com.ira.shopper.ShopperApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        
        <meta-data android:name="com.google.android.gms.version"
           android:value="@integer/google_play_services_version" />
        
        
        <!-- Content provider -->
        <provider
            android:name="com.ira.shopper.provider.ShopperProvider"
            android:authorities="com.ira.shopper.provider"
            android:exported="false" >
        </provider>
        
        <activity
            android:name="com.ira.shopper.eval.TestSetupActivity"
            android:label="@string/title_activity_test_setup" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ira.shopper.ui.MainActivity"
            android:label="@string/app_name" >
            
        </activity>
        <activity
            android:name="com.ira.shopper.importer.ImporterActivity"
            android:label="@string/title_activity_importer"
            android:parentActivityName="com.ira.shopper.ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ira.shopper.ui.MainActivity" />
        </activity>
        <activity android:name="com.ira.shopper.ui.SettingsActivity" >
        </activity>
        <activity android:name="com.ira.shopper.ui.ContextSettingsActivity" >
        </activity>
        
        <activity
            android:name="com.ira.shopper.ui.ItemDetailsActivity"
            android:label="@string/title_activity_item_details" >
        </activity>
        <activity
            android:name="com.ira.shopper.ui.CritiqueActivity"
            android:parentActivityName="com.ira.shopper.ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ira.shopper.MainActivity" />
        </activity>
        <activity
            android:name="com.ira.shopper.eval.ResultsActivity"
            android:label="@string/title_activity_results" >
        </activity>
        <activity
            android:name="com.ira.shopper.eval.ContextInitActivity"
            android:label="@string/title_activity_context_init" >
        </activity>
        
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDpYjx-4rTOAdzZQ5fPX-xHw9_XEmVvxq4"/>
        
    </application>

</manifest>
